{
  "name": "memran/marwa-debugbar",
  "description": "Lightweight floating footer Debug Bar for PHP apps with plugins, VarDumper, history, and profiling.",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "psr/log": "^3.0",
    "psr/http-message": "^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0",
    "symfony/var-dumper": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.57",
    "twig/twig": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "Marwa\\DebugBar\\": "src/"
    },
    "files": ["src/Helpers.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse",
    "fix": "php-cs-fixer fix --verbose",
    "check-style": "php-cs-fixer fix --dry-run --diff",
    "ci": "composer check-style && composer stan && composer test"
  }
}
